<% layout('boilerplate/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4" style="width: 100%; max-width: 500px; border-radius: 1rem;">
            <h2 class="text-center mb-4">Upload Blood Report</h2>
            <% if (error) { %>
                <div class="alert alert-danger text-center" role="alert">
                    <%= error %>
                </div>
                <% } %>
                    <form class="needs-validation" method="POST" enctype="multipart/form-data" action="/upload"
                        novalidate id="uploadForm">
                        <div class="mb-3">
                            <label for="user_pdf" class="form-label">Your Blood Report (PDF)</label>
                            <input type="file" class="form-control" id="user_pdf" name="user_pdf"
                                accept="application/pdf" required>
                            <div class="invalid-feedback">Please upload a PDF file.</div>
                        </div>
                        <div class="progress mt-3 mb-3 d-none" id="uploadProgress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" 
                                role="progressbar" style="width: 0%" id="progressBar">
                                Processing...
                            </div>
                        </div>
                        <div class="alert alert-info d-none" id="processingInfo">
                            <i class="fas fa-info-circle"></i> Processing large PDFs may take up to 2 minutes. Please be patient.
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary" id="submitBtn">Upload Report</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a href="/index" class="btn btn-outline-primary">Back to Home</a>
                    </div>
        </div>
    </div>